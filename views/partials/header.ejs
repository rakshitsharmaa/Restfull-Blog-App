<html>
<head>
    <title>Blog App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
     integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="/public/stylesheets/app.css">
</head>
<body>
    <div class="ui fixed inverted menu">
        <div class=" ui container">
            <div class="header item"><i class="code icon"></i><h4>Blog Item</h4></div>
            <a href="/" class="item"><h4>Home</h4></a>
                <a href="/blogs/new" class="item"><h4>New post</h4></a>
                <% if(!currentUser){%>
                    <a href="/login" class="item"</a> <h4>login</h4></a>
                    <a href="/register" class="item"</a><h4>sign up</h4></a>
               <% }else{ %>
                <a href="#" class="item">logged in as  <%=currentUser.username%></a>
                <a href="/logout" class="item"</a>logout</a>
                <%}%>               
        </div>
    </div>
    </div>
    <br>
    <br>
    <br>
    <div class="container">
        <%if(success && success.length>0){%>
        <div class="alert alert-success" role="alert">
        <h4> <%=success%></h4>  
        </div>
        <%}%>
        <%if(error && error.length>0){%>
            <div class="alert alert-danger" role="alert">
            <h4> <%=error%></h4>  
            </div>
            <%}%>
    </div>
    
